<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".asteroid.AsteroidFragment">

    <data>
        <variable
            name="asteroidViewModel"
            type="com.chgonzalez.nasaasteroid.asteroid.AsteroidViewModel" />
        <variable
            name="nasaImage"
            type="com.chgonzalez.nasaasteroid.network.PictureOfDay" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pictureOfDay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            pictureData="@{asteroidViewModel.imageOfDay}"
            tools:listitem="@layout/picture_of_day"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/asteroidList"
            tools:itemCount="1"
            app:spanCount="1"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/asteroidList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            listData="@{asteroidViewModel.asteroid}"
            tools:listitem="@layout/asteroid_list_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pictureOfDay"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>